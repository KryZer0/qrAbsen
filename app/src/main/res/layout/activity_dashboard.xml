<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/check_in_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="140dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/rounded_green_btn"
                android:drawableBottom="@drawable/masuk"
                android:drawablePadding="20dp"
                android:gravity="bottom|center"
                android:paddingBottom="20dp"
                android:text="@string/masuk"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/check_out_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="140dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/rounded_red_btn"
                android:drawableBottom="@drawable/logout"
                android:drawablePadding="20dp"
                android:gravity="bottom|center"
                android:paddingBottom="20dp"
                android:text="@string/keluar"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/history_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="140dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/rounded_blue_btn"
                android:drawableBottom="@drawable/history"
                android:drawablePadding="20dp"
                android:gravity="bottom|center"
                android:paddingBottom="20dp"
                android:text="@string/history"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/siswa_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="140dp"
                android:layout_marginVertical="8dp"
                android:background="@drawable/rounded_blue_btn"
                android:drawableBottom="@drawable/history"
                android:drawablePadding="20dp"
                android:gravity="bottom|center"
                android:paddingBottom="20dp"
                android:text="@string/siswa"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
